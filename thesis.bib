@article{cunha_impact_2014,
  archivePrefix = {arXiv},
  eprinttype = {arxiv},
  eprint = {1407.0181},
  title = {Impact of Micro-Telluric Lines on Precise Radial Velocities and Its Correction},
  volume = {568},
  issn = {0004-6361, 1432-0746},
  url = {http://arxiv.org/abs/1407.0181},
